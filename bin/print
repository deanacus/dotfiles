#!/usr/bin/env bash

_print_in_color() {
    printf "%b" \
        "$(tput setaf "$2" 2> /dev/null)" \
        "$1" \
        "$(tput sgr0 2> /dev/null)"
}

print_in_red() {
    _print_in_color "$1" 1
}

print_in_green() {
    _print_in_color "$1" 2
}

print_in_yellow() {
    _print_in_color "$1" 3
}

print_in_blue() {
    _print_in_color "$1" 4
}

print_in_purple() {
    _print_in_color "$1" 5
}

print_in_cyan() {
    _print_in_color "$1" 6
}

print_in_white() {
    _print_in_color "$1" 7
}

print_result() {
    if [ "$?" -eq 0 ]; then
        print_success "$1"
    else
        print_error "$1"
    fi
}

print_question() {
    print_in_yellow "  [?] $1\n"
}

print_success() {
    print_in_green "  [‚úì] $1\n"
}

print_success_muted() {
    printf "  ${dim}[‚úì] $1${reset}\n" "$@"
}

print_muted() {
    printf "  ${dim}$1${reset}\n" "$@"
}

print_warning() {
    print_in_yellow "  [!] $1\n"
}

print_error() {
    print_in_red "  [ùòÖ] $1 $2\n"
}