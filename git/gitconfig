[user]
  name = Dean Harris
  email = dean@harris.tc

[github]
  user = deanacus
  email = dean@harris.tc

[init]
  defaultBranch = main

[alias]
  append = commit --amend --no-edit
  amend = commit --amend
  branch-log = log master..
  unstage = reset
  assume = update-index --assume-unchanged
  assumed = !"git ls-files -v | grep -E "^h" | awk '{print $2}'"
  unassume = update-index --no-assume-unchanged
  local = log --branches --not --remotes --pretty=oneline --abbrev-commit
  branch-details = for-each-ref --sort=-committerdate --format=\"%(color:dim white)Name: %(color:no-dim yellow)%(refname:lstrip=3)\n%(color:dim white)Last Updated: %(color:nodim cyan)%(authordate:short)\n%(color:dim white )Updated By:  %(color:nodim cyan)%(authorname)\n\" --no-merged=master  refs/remotes
  merged = for-each-ref --sort=-committerdate --format=\"%(color:dim white)Branch Name:  %(color:no-dim yellow)%(refname:lstrip=3)\n%(color:dim white)Last Updated: %(color:nodim cyan)%(authordate:short)\n%(color:dim white )Updated By:   %(color:nodim cyan)%(authorname)\n\" refs/remotes --merged

[core]
  excludesfile = ~/dotfiles/git/gitignore
	editor = nvim

[color]
  ui = auto

[color "branch"]
  current = cyan
  local = yellow
  remote = magenta
  default = blue reverse

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[branch]
  sort = -committerdate
  autosetuprebase = always

[fetch]
  prune = true

[help]
  autocorrect = 1

[merge]
  tool = code --wait

[status]
  showUntrackedFiles = all

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[rebase]
  autostash = true
  autosquash = true

[url "git://github"]
  insteadOf = https://github

[url "git@github.com:"]
  insteadOf = https://github.com/
  insteadOf = gh:

[url "git@github.com:deanacus/"]
  insteadOf = me:

[url "git://bitbucket"]
  insteadOf = https://bitbucket

[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/
  insteadOf = bb:

[includeIf "gitdir:~/dev/rpt/"]
  path = ~/dotfiles/git/gitconfig.work